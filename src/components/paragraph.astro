---
const { frontmatter } = Astro.props;
---

<div class={`page-patagraph ${`page-patagraph-${frontmatter.side}`}`}>
  <p>{frontmatter.description}</p>
  <slot />
</div>

<style is:global>
  .page-patagraph {
    width: 650px;
    position: relative;
    padding-left: 50px;
  }

  .page-patagraph::before {
    content: "";
    position: absolute;
    top: 50%;
    transform: translate(0, -50%);
    left: 0;
    width: 2px;
    height: 95%;
    background: linear-gradient(
      267.03deg,
      #00f0ff 4.01%,
      #5200ff 57.55%,
      #ff2df7 114.97%
    );
  }

  .page-patagraph-right {
    margin-left: auto;
    padding-left: 0px;
    padding-right: 50px;
    text-align: right;
  }

  .page-patagraph-right::before {
    left: auto;
    right: 0;
  }

  .page-patagraph p {
    font-size: 32px;
    font-weight: 400;
    line-height: 45px;
    letter-spacing: 0.71px;
  }
  @media screen and (max-width: 1200px) {
    .page-patagraph {
      width: 550px;
  }
    .page-patagraph p {
      font-size: 24px;
      line-height: 32px;
    }
  }
  @media screen and (max-width: 600px) {
    .page-patagraph-right{
      padding-right: 20px;
    }
    .page-patagraph-left{
      padding-left: 20px;
    }
    .page-patagraph {
      width: 550px;
      width: 100%;
  }
    .page-patagraph p {
      font-size: 16px;
      line-height: 24px;
    }
  }
</style>
